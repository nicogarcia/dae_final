@model Presentacion.Models.LoginModel

@{
    ViewBag.Title = "Iniciar sesión";
}

<div class="row">
    <div class="col-md-12">
        <h3 class="text-center">Iniciar sesión</h3>
        <hr />
    </div>
</div>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label class="control-label">Nombre de usuario</label>
                @Html.BootstrapTextBoxFor(m => m.UserName)
                @Html.BootstrapValidationMessageFor(m => m.UserName)
            </div>

            <div class="form-group">
                <label class="control-label">Contraseña</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.BootstrapValidationMessageFor(m => m.Password)
            </div>

            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(m => m.RememberMe) Recordarme
                </label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <p class="pull-right"><button class="btn btn-success" type="submit">Iniciar sesión</button></p>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
