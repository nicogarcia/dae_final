@model Presentacion.Models.UsuarioVM

@{
    ViewBag.Title = "Eliminar usuario";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h3 class="text-center">Eliminación de usuario</h3><hr />

        <h4 class="text-center">¿Está seguro de que quiere eliminar el usuario <strong>@Model.NombreUsuario</strong>?</h4>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <br />
            <p class="text-center">
                <button class="btn btn-danger" type="submit">Eliminar</button>
                @Html.BootstrapActionButton("Cancelar", "Index", new { @class = "btn-default" })
            </p>
        }
    </div>
</div>
