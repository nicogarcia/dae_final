@model Dominio.Entidades.Recurso

@{
    ViewBag.Title = "Detalle de recurso";
}
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h3 class="text-center">Detalle de recurso</h3><hr />
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <dl class="dl-horizontal">
                    <!-- Codigo -->
                    <dt>
                        @Html.DisplayNameFor(model => model.Codigo)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Codigo)
                    </dd>

                    <!-- Nombre -->
                    <dt>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>

                    <!-- Tipo -->
                    <dt>
                        @Html.DisplayNameFor(model => model.Tipo)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Tipo.Nombre)
                    </dd>

                    <!-- Descripcion -->
                    <dt>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Descripcion)
                    </dd>

                    <!-- Caracteristicas -->
                    @foreach (var caracteristica in Model.Caracteristicas)
                    {
                        <dt>
                            @Html.DisplayFor(model => caracteristica.Tipo.Nombre)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => caracteristica.Valor)
                        </dd>
                    }
                </dl>
                <hr/>
            </div>

        </div>
        <div class="row">
            <p class="text-center">
                <button class = "btn btn-default" onclick="javascript:window.history.back();">Atrás</button>
                @Html.BootstrapActionButton("Editar", "Edit", new { id = Model.Id }, new { @class = "btn-info" })
            </p>
        </div>
    </div>
</div>