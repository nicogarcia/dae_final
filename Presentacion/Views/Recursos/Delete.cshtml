@model Dominio.Entidades.Recurso

@{
    ViewBag.Title = "Eliminar recurso";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">

        <h3 class="text-center">Eliminación de recurso</h3><hr />

        <h4 class="text-center">¿Está seguro de que quiere eliminar el recurso <strong>@Model.Nombre</strong>?</h4>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <br/>
            <p class="text-center">
                <button class="btn btn-danger" type="submit">Eliminar</button>
                @Html.BootstrapActionButton("Cancelar", "Index", new { @class="btn-default"})
            </p>
        }
    </div>
</div>
