@model Presentacion.Models.BindingListInFormVM

@{
    ViewBag.Title = "BindingListInForm";
}

<h2>BindingListInForm</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Formualario de prueba de binding de listas</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nombre)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nombre)
            @Html.ValidationMessageFor(model => model.Nombre)
        </div>

        <div class="editor-label">
            Caracteristicas
        </div>
        <div class="editor-field">
            <table>
                @for (int i = 0; i < Model.Caracteristicas.Count; i++)
                {
                    <tr>
                        <td>@Html.CheckBox("Caracteristicas[" + i + "].Seleccionada", Model.Caracteristicas[i].Seleccionada)</td>
                        <td>@Html.Hidden("Caracteristicas[" + i + "].Tipo", Model.Caracteristicas[i].Tipo)</td>
                        <td>@Html.Label(Model.Caracteristicas[i].Nombre)</td>
                        <td>@Html.TextBox("Caracteristicas[" + i + "].Valor", Model.Caracteristicas[i].Valor)</td>
                    </tr>
                }
            </table>
        </div>


        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
